@inherits LayoutComponentBase

<PageTitle>VideoHosting</PageTitle>
<style>
    .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

    table {
        border: 1px;
        border-color: black;
        background-color: red;
    }

    tr {
        background-color: purple;
        height: 33%;
    }

    th {
        border: 2px solid green;
        background-color: white;
        padding: 5px;
        width: 8.3%;
    }

    img {
        width: 100%;
        height: 50%;
        background-color: white;
    }

    a {
        color: black;
        text-decoration: none;
    }
</style>
<div class="page" style="background-color:#f3f3f2">

    <main>
        <div style="position: sticky; top: 0; min-height: 2em;  height: 0.8%">
            <NavMenu />
        </div>

        <div style="table-layout:fixed">
            @Body
        </div>
        <div class="fixed-bottom oi-resize-height" style="height: 10%; bottom: 0px; position: fixed; left: 0px">
            <SearchForm />
        </div>
    </main>
    
</div>
